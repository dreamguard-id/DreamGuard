<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_toolbar"
        app:navigationIconTint="@color/gray">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="@string/prediction_history"
            android:textColor="@color/gray"
            android:textSize="20sp" />
    </com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <!-- Button 1 -->
                <Button
                    android:id="@+id/btnAllHistory"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="10sp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingHorizontal="8dp"
                    android:text="@string/button_all"
                    android:textColor="@color/purple"
                    android:textSize="12sp"
                    app:backgroundTint="@color/teal"
                    app:strokeColor="@color/purple"
                    tools:ignore="TouchTargetSizeCheck" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNoDisorderHistory"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingHorizontal="8dp"
                    android:text="@string/button_no_sleep"
                    android:textColor="@color/purple"
                    android:textSize="12sp"
                    app:backgroundTint="@color/white"
                    app:strokeColor="@color/purple"
                    tools:ignore="TouchTargetSizeCheck" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnApneaHistory"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="20dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"

                    android:paddingHorizontal="8dp"
                    android:text="@string/button_apnea"
                    android:textColor="@color/purple"
                    android:textSize="12sp"
                    app:backgroundTint="@color/white"
                    app:strokeColor="@color/purple"
                    tools:ignore="TouchTargetSizeCheck" />

                <!-- Button 4 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnInsomniaHistory"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="25sp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingHorizontal="4dp"
                    android:text="@string/button_insomnia"
                    android:textColor="@color/purple"
                    android:textSize="12sp"
                    app:backgroundTint="@color/white"
                    app:strokeColor="@color/purple"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPredictions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                tools:listitem="@layout/item_history_prediction" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
