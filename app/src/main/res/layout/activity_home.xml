<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteGray"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:background="@drawable/circle_background"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toEndOf="@id/profile_picture"
                app:layout_constraintTop_toTopOf="@id/profile_picture"
                app:layout_constraintBottom_toBottomOf="@id/profile_picture">

                <TextView
                    android:id="@+id/greeting_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good Morning, Kaylee"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 December 2024"
                    android:textColor="@color/lightGray"
                    android:textSize="14sp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/last_prediction_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/profile_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/purple">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/prediction_row"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/prediction_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your last prediction result is"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/prediction_result"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sleep Insomnia"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/insights_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Insights recommendation"
                            android:layout_marginTop="8dp"
                            android:textSize="12dp"
                            android:backgroundTint="@color/teal"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/card_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dashboard_illustration"
                        android:clipToOutline="true"
                        android:layout_marginStart="5dp"
                        />
                </LinearLayout>

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/lightGray"
                    app:layout_constraintTop_toBottomOf="@id/prediction_row" />

                <LinearLayout
                    android:id="@+id/calendar_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/divider"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:id="@+id/calendar_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/white_calendar"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/last_prediction_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12 December 2024"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/button_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/last_prediction_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:id="@+id/sleep_scheduler_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/prediction_history_button">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/btn_sleep_scheduler"
                    android:backgroundTint="@color/purple"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sleep Scheduler"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/prediction_history_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp"
                app:layout_constraintStart_toEndOf="@id/sleep_scheduler_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/btn_prediction_history"
                    android:backgroundTint="@color/purple"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prediction History"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/analytics_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/button_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:id="@+id/title_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your overall averages"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/content_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/title_section"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp">

                <!-- Sleep Time Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/sleep_time_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/right_card_section"
                    android:backgroundTint="@color/purple">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <!-- Title -->
                        <TextView
                            android:id="@+id/sleep_time_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sleep Time"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <!-- Circle Background -->
                        <View
                            android:id="@+id/circle_background"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:background="@drawable/circle_border"
                            app:layout_constraintTop_toBottomOf="@id/sleep_time_title"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="16dp" />

                        <!-- Sleep Time Value -->
                        <TextView
                            android:id="@+id/sleep_time_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7h 21m"
                            android:textColor="@color/teal"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="@id/circle_background"
                            app:layout_constraintBottom_toBottomOf="@id/circle_background"
                            app:layout_constraintStart_toStartOf="@id/circle_background"
                            app:layout_constraintEnd_toEndOf="@id/circle_background" />

                        <!-- Sleep Goal -->
                        <TextView
                            android:id="@+id/sleep_goal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sleep goal: 8h 30m"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:layout_constraintTop_toBottomOf="@id/circle_background"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="16dp" />

                        <!-- Sleep Deficit -->
                        <TextView
                            android:id="@+id/sleep_deficit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-1h 09m"
                            android:textColor="@color/teal"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:background="@drawable/rounded_rectangle"
                            android:padding="8dp"
                            app:layout_constraintTop_toBottomOf="@id/sleep_goal"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="8dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- Right Card Section -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/right_card_section"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/sleep_time_card"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <!-- Stress Level Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/stress_level_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="@color/purple"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">

                            <!-- Title -->
                            <TextView
                                android:id="@+id/stress_level_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Stress lvl"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                            <!-- Circle Background -->
                            <View
                                android:id="@+id/stress_circle_background"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="16dp"
                                android:background="@drawable/circle_border"
                                app:layout_constraintTop_toBottomOf="@id/stress_level_title"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                            <!-- Stress Level Value -->
                            <TextView
                                android:id="@+id/stress_level_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9"
                                android:textColor="@color/teal"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                app:layout_constraintTop_toTopOf="@id/stress_circle_background"
                                app:layout_constraintBottom_toBottomOf="@id/stress_circle_background"
                                app:layout_constraintStart_toStartOf="@id/stress_circle_background"
                                app:layout_constraintEnd_toEndOf="@id/stress_circle_background" />

                            <!-- Description -->
                            <TextView
                                android:id="@+id/stress_level_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Extreme Stress – Overwhelmed, needing intervention to cope."
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:gravity="center"
                                android:layout_marginTop="16dp"
                                app:layout_constraintTop_toBottomOf="@id/stress_circle_background"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/activity_level_card"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="@color/purple"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/stress_level_card"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/activity_level_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Activity lvl"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                            <View
                                android:id="@+id/activity_circle_background"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="16dp"
                                android:background="@drawable/circle_border"
                                app:layout_constraintTop_toBottomOf="@id/activity_level_title"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                            <TextView
                                android:id="@+id/activity_level_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8"
                                android:textColor="@color/teal"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                app:layout_constraintTop_toTopOf="@id/activity_circle_background"
                                app:layout_constraintBottom_toBottomOf="@id/activity_circle_background"
                                app:layout_constraintStart_toStartOf="@id/activity_circle_background"
                                app:layout_constraintEnd_toEndOf="@id/activity_circle_background" />

                            <TextView
                                android:id="@+id/activity_level_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Very Active – Rigorous exercise or a highly physical lifestyle."
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:gravity="center"
                                android:layout_marginTop="16dp"
                                app:layout_constraintTop_toBottomOf="@id/activity_circle_background"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/sleep_quality_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/purple"
                android:layout_marginBottom="100dp"
                app:layout_constraintTop_toBottomOf="@id/content_section"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <View
                        android:id="@+id/sleep_quality_circle"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/circle_border"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/sleep_quality_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:textColor="@color/teal"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="@id/sleep_quality_circle"
                        app:layout_constraintBottom_toBottomOf="@id/sleep_quality_circle"
                        app:layout_constraintStart_toStartOf="@id/sleep_quality_circle"
                        app:layout_constraintEnd_toEndOf="@id/sleep_quality_circle" />

                    <TextView
                        android:id="@+id/sleep_quality_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sleep Quality"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/sleep_quality_circle"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/sleep_quality_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Good – Rested well, but not perfect."
                        android:textColor="@color/teal"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toEndOf="@id/sleep_quality_circle"
                        app:layout_constraintTop_toBottomOf="@id/sleep_quality_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>